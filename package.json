{
  "name": "melnycz.uk",
  "version": "0.1.0",
  "main": "./pages/index.tsx",
  "private": true,
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "gl-matrix": "^3.3.0",
    "next": "^9.2.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-markdown": "^4.3.1",
    "react-use": "^14.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@typescript-eslint/typescript-estree": "^2.33.0",
    "@zeit/next-sass": "^1.0.1",
    "babel-jest": "^26.0.1",
    "babel-plugin-react-css-modules": "^5.2.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "glob": "^7.1.6",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^10.1.1",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.2",
    "sass": "^1.22.9",
    "serve": "^11.1.0",
    "sharp": "^0.25.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.ts"
    ],
    "testMatch": [
      "**/*.test.tsx"
    ],
    "verbose": false
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "yarn lint:fix",
      "yarn prettier",
      "git add"
    ]
  },
  "resolutions": {
    "@typescript-eslint/parser": "^1.11.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0"
  },
  "scripts": {
    "build": "next build",
    "dev": "next",
    "dist": "yarn build && yarn resize && yarn export",
    "export": "next export",
    "lint": "eslint './{pages,src}/**/*.{js,ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write './{pages,src}/**/*.{js,ts,tsx}'",
    "resize": "node ./static/resize.js",
    "sass": "sass ./src/styles/index.scss ./out/index.css && rm ./out/index.css.map",
    "start": "next start",
    "serve": "serve -p 8080 out",
    "test": "jest --detectOpenHandles --colors",
    "test:coverage": "jest --coverage && rm -r ./coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "yarn type-check -- --watch"
  }
}
